{
  "info": {
    "name": "GearGuard API Tests",
    "description": "Complete test collection for GearGuard API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. User Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Technician\",\n  \"email\": \"john.tech@gearguard.com\",\n  \"password\": \"password123\",\n  \"role\": \"technician\",\n  \"department\": \"Maintenance\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has success true\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "pm.test(\"Response contains token\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.token).to.exist;",
                  "    pm.collectionVariables.set(\"authToken\", jsonData.data.token);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "2. User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.tech@gearguard.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signin",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Login successful\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.token).to.exist;",
                  "    pm.collectionVariables.set(\"authToken\", jsonData.data.token);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "3. Get Form Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/form-data",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "form-data"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Contains roles and departments\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.roles).to.be.an('array');",
                  "    pm.expect(jsonData.data.departments).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "4. Invalid Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.tech@gearguard.com\",\n  \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signin",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 401\", function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test(\"Error message correct\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.false;",
                  "    pm.expect(jsonData.message).to.include('Invalid');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Equipment",
      "item": [
        {
          "name": "1. Get Dropdown Data",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/equipment/data/dropdowns",
              "host": ["{{baseUrl}}"],
              "path": ["equipment", "data", "dropdowns"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Contains dropdown data\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.departments).to.be.an('array');",
                  "    pm.expect(jsonData.data.maintenanceTeams).to.be.an('array');",
                  "    pm.expect(jsonData.data.users).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "2. Create Equipment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"CNC Machine X1\",\n  \"serialNumber\": \"CNC-2024-001\",\n  \"department\": \"Production\",\n  \"assignedEmployee\": \"John Technician\",\n  \"maintenanceTeamId\": 1,\n  \"purchaseDate\": \"2024-01-15\",\n  \"warrantyExpiry\": \"2026-01-15\",\n  \"location\": \"Production Floor A\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/equipment",
              "host": ["{{baseUrl}}"],
              "path": ["equipment"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Equipment created successfully\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.id).to.exist;",
                  "    pm.collectionVariables.set(\"equipmentId\", jsonData.data.id);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "3. Get All Equipment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/equipment",
              "host": ["{{baseUrl}}"],
              "path": ["equipment"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Returns equipment array\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "    pm.expect(jsonData.data.length).to.be.greaterThan(0);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "4. Get Equipment by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/equipment/{{equipmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["equipment", "{{equipmentId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Returns single equipment\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.id).to.exist;",
                  "    pm.expect(jsonData.data.name).to.exist;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "5. Update Equipment",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
